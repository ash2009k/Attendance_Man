<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashwini.attendanceman.addActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enter Student Details"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62sp"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:hint="Student ID"
                android:inputType="numberSigned"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="84dp" />

            <EditText
                android:id="@+id/addname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62sp"
                android:ems="10"
                android:hint="Student name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:singleLine="false" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62sp"
                android:layout_marginTop="5sp"
                android:text="Select Course:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addname" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/firstyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160sp"
                    android:text="1st Year" />

                <RadioButton
                    android:id="@+id/secondyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160sp"
                    android:text="2nd Year" />


                <RadioButton
                    android:id="@+id/thirdyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160sp"
                    android:text="3rd Year" />

                <RadioButton
                    android:id="@+id/fourthyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160sp"
                    android:text="4th Year" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62sp"
                    android:layout_marginTop="5sp"
                    android:text="Select Batch:"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addname" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/firstbatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160sp"
                        android:text="Batch 1" />

                    <RadioButton
                        android:id="@+id/secondbatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160sp"
                        android:text="Batch 2" />


                    <RadioButton
                        android:id="@+id/thirdbatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160sp"
                        android:text="Batch 3" />

                    <RadioButton
                        android:id="@+id/fourthbatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160sp"
                        android:text="Batch 4" />

                </RadioGroup>
            </RadioGroup>

            <EditText
                android:id="@+id/addphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62sp"
                android:ems="10"
                android:hint="contact number"
                android:inputType="phone"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="244dp" />

            <EditText
                android:id="@+id/addemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62sp"
                android:ems="10"
                android:hint="email "
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="296dp" />

            <Button
                android:id="@+id/submitbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:onClick="addstudent"
                android:text="Add Student" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
